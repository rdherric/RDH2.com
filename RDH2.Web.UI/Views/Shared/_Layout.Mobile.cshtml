<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Site.Mobile.css")" />
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.css" />
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.8.2.min.js"></script>
    <script type="text/javascript">
        $(document).bind("mobileinit", function () {
            $.mobile.page.prototype.options.addBackBtn = true;
            $.mobile.page.prototype.options.backBtnText = "back";
        });
    </script>
    <script type="text/javascript" src="http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.fitImage.js")"></script>
</head>
<body>
    <div id="main-page" data-role="page" data-theme="a">
        <script type="text/javascript">
            $(document).one("pageshow", "#main-page", function () {
                @RenderSection("PageInitScript", false)
            });
        </script>
        <div data-role="header" data-position="fixed">
            <h1>RDH2.COM</h1>
            <a data-role="button" data-icon="home" class="ui-btn-right" href="@Url.Action("Index", "Home")">home</a>
            <div data-role="navbar">
                <ul>
                    <li><a data-icon="check" href="@Url.Action("Index", "Post")">posts</a></li>
                    <li><a data-icon="star" href="@Url.Action("Index", "Gallery")">galleries</a></li>
                    <li><a data-icon="info" href="@Url.Action("Index", "About")">about</a></li>
                </ul>
            </div> 
        </div>
        <div data-role="content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
